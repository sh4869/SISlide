<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slidecontroller="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <net.sh4869.slidecontroller.view.customFontButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf054;"
        android:textSize="30sp"
        android:id="@+id/rightButton"
        android:onClick="sendRightRequest"
        slidecontroller:customFont="fontawesome-webfont.ttf"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="103dp"
        android:layout_alignTop="@+id/leftButton"
        android:layout_alignEnd="@+id/editText" />

    <net.sh4869.slidecontroller.view.customFontButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf053;"
        android:textSize="30sp"
        android:id="@+id/leftButton"
        android:onClick="sendLeftRequest"
        slidecontroller:customFont="fontawesome-webfont.ttf"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="86dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_button_text"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
